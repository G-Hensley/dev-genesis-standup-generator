# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org
#
# CUSTOMIZATION:
# - Adjust indent_size values to match your team's preferences
# - Add/remove language sections as needed for your tech stack
# - Most editors support EditorConfig natively or via plugins
#
# Note: Some settings (like shell_variant) are tool-specific extensions
# that work with formatters like shfmt but may not be recognized by all editors.

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Java/Kotlin files
[*.{java,kt,kts}]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# Ruby files
[*.rb]
indent_size = 2

# Shell scripts
# Note: shell_variant, binary_next_line, switch_case_indent are shfmt extensions
# They work with shfmt formatter but may be ignored by other editors
[*.{sh,bash,zsh}]
indent_size = 2
shell_variant = bash
binary_next_line = true
switch_case_indent = true

# PowerShell scripts
[*.{ps1,psm1,psd1}]
indent_size = 4
charset = utf-8-bom

# Makefiles (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS/SCSS/Less files
[*.{css,scss,sass,less}]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# Svelte files
[*.svelte]
indent_size = 2

# Configuration files
[*.{conf,config}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# Terraform files
[*.{tf,tfvars}]
indent_size = 2

# Protocol Buffers
[*.proto]
indent_size = 2

# GraphQL
[*.{graphql,gql}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# INI files
[*.ini]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# Ignore minified files
[*.min.*]
indent_style = ignore
indent_size = ignore
insert_final_newline = ignore

# Ignore vendor directories
[{vendor,node_modules}/**]
indent_style = ignore
indent_size = ignore
